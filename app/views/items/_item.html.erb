<li>
	<h4><i class="fa fa-picture-o"></i> <%= item.name %><%= render partial: "items/tools", :locals => {:item => item} %>
		<%= link_to "Add Task".html_safe, 'javascript:;', "data-toggle" => "collapse", 'data-target' => "#item-#{item.id}-addTask", class: "btn btn-info btn-xs pull-right", style: "margin-right: 10px;" %>
	</h4>

	<hr>

	<% if item.tasks.incomplete.count > 0 %>
		<%= content_tag :div, "Remaining Tasks (#{item.tasks.incomplete.count})", class: "title-sm" %>
		<ul>
			<%= render item.tasks.incomplete.due.order("starred DESC, due_date") %>
			<%= render item.tasks.incomplete.notDue.order("starred DESC, created_at") %>
		</ul>
	<% end %>

	<div class="collapse" id="item-<%= item.id %>-addTask"><%= render partial: "tasks/new", :locals => {:item => item} %></div>

	<% if item.tasks.completed.count > 0 %>

		<%= content_tag :div, "Completed Tasks (#{item.tasks.completed.count})", class: "title-sm" %>

		<%= link_to "<i class='fa fa-eye'></i>".html_safe, 'javascript:;', "data-toggle" => "collapse", 'data-target' => "#item-#{item.id}-completedTasks" %>
		<ul class="tasks-list collapse" id="item-<%= item.id %>-completedTasks"><%= render item.tasks.completed.order("completed_at") %></ul>

		<br>
	<% end %>


	<br>
</li>
