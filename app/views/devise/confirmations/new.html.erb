<div class="container" style="margin-top: 50px;">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">

			<div class="logo"><%= link_to "apollo", root_path %></div>

			<%= devise_error_messages! %>

    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title"><i class='fa fa-mail-forward'></i> Resend confirmation instructions</h3>
			 	</div>
			  	<div class="panel-body">

			    	<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>

                  <fieldset>
			    	  	<div class="form-group">

			    		   <%= f.email_field :email, :placeholder => "Email Address", class: "form-control", :autofocus => true %>
			    		</div>

			    		<%= f.submit "Resend confirmation instructions", class: "btn btn-md btn-success btn-block" %>
			    	</fieldset>
			      <% end %>
			    </div>

			    <div class="panel-footer">
			    	<%= link_to "Register", new_registration_path(resource_name) %> |
			    	<%= link_to "Login", new_session_path(resource_name) %>
			   </div>
			</div>
		</div>
	</div>
</div>