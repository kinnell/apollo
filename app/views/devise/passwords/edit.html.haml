.row
  .col-md-4.col-md-offset-4

    .logo= link_to "apollo", root_path

    .panel.panel-default.panel-outside

      .panel-heading
        %h4
          %i.fa.fa-key
          Change your password

      .panel-body
        = form_for resource, as: resource_name, url: password_path(resource_name), method: :put do |f|

          = f.hidden_field :reset_password_token

        .form-group
          = f.password_field :password,
            placeholder: "New password",
            class: "form-control",
            autofocus: true

        .form-group
          = f.password_field :password_confirmation,
            placeholder: "Confirm new password",
            class: "form-control"

        = f.submit "Change my password", class: "btn btn-md btn-success btn-block"
