$("#task_"+<%= @task.id %>).next("hr").remove();
$("#task_"+<%= @task.id %>).addClass("animated fadeOut").delay(200).slideUp();

setTimeout(function(){
	<% if @task.item_id? %>
		$("#item_"+<%= @task.item_id %>+"_tasks").html("<%= j render "items/tasks", { :tasks => @task.item.tasks, :item_id => @task.item_id } %>");
	<% else %>
		$("#item_0_tasks").html("<%= j render "items/tasks", { :tasks => @task.project.tasks.general, :item_id => 0 } %>");
	<% end %>
},750);
