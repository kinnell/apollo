<%= form_for task, remote: true, :authenticity_token => true, html: {class: "task-checkbox"} do |f| %>
	<%= f.hidden_field :completed_at, :value => DateTime.now %>
	<%= f.check_box :completed, :disabled => (task.user != current_user), :remote => true, onclick: "$(this).parent('form').trigger('submit.rails');" %>
<% end %>