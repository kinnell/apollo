<% item_id = @task.item_id || 0 %>

<% if @task.completed %>
	$("#task-"+<%= @task.id %>).addClass("task-completed");
<% else %>
  $("#task-"+<%= @task.id %>).removeClass("task-completed");
<% end %>

$("#task-"+<%= @task.id %>).addClass("animated fadeOut").slideUp();

setTimeout(function(){
	$("#item-"+<%= item_id %>+"-tasks").html("<%= j render "items/tasks", { tasks: @task.item_tasks, item_id: item_id } %>");
},500);

