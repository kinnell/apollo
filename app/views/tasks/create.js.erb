<% item_id = @task.item_id || 0 %>

$("#item-"+<%= item_id %>+"-tasks").html("<%= j render "items/tasks", { tasks: @task.item_tasks, item_id: item_id } %>");
$("#item-"+<%= item_id %>+"-addTask").find("form").trigger("reset");
$("#item-"+<%= item_id %>+"-addTask").find(".add-task-name").focus();

$("#task-"+<%= @task.id %>).addClass("animated fadeIn");
