<% if @task.item_id? %>
	$('#item_'+<%= @task.item_id %>+'_tasks').html("<%= escape_javascript(render 'items/tasks', { :tasks => @task.item.tasks, :item_id => @task.item_id }) %>");
	$('#item_'+<%= @task.item.id %>+"_addTask").find('form').trigger("reset");
	$('#item_'+<%= @task.item.id %>+"_addTask").find('.add-task-name').focus();
<% else %>
	$('#item_0_tasks').html("<%= escape_javascript(render 'items/tasks', { :tasks => @task.project.tasks.general, :item_id => 0 }) %>");
	$('#item_general_addTask').find('form').trigger("reset");
	$('#item_general_addTask').find('.add-task-name').focus();
<% end %>

$('#task_'+<%= @task.id %>).addClass('animated fadeIn');

noty({text:'<center>Task Created</center>', type: 'information', layout: 'bottomRight', timeout: 1000, dismissQueue: true, animateOpen: {opacity: 'show'}});