<div class="container">

  <h2><i class="fa fa-folder-o"></i> Tasks<%= link_to 'New Task', new_task_path, class: "btn btn-sm btn-success", style: "float: right;" %></h2>


  <table class="table table-bordered" style="background-color: white;">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Project</th>
        <th>Due Date</th>
        <th>Completed?</th>
        <th>Tools</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %>
          <td><%= task.name %></td>
          <td><%= task.project.name if task.project %></td>
          <td><%= task.due_date.strftime("%x") if task.due_date %></td>
          <td><%= task.completed %></td>
          <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_task_path(task) %>
              <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
