.modal.fade{id: "edit-product-#{product.id}-modal", "aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content

      = form_for product do |f|

        .modal-header
          %button.button.close{"data-dismiss" => "modal", "aria-hidden" => "true"} &times;
          %h4 Edit Product

        .modal-body

          .row

            .form-group.col-md-12
              %label Product Name:
              = f.text_field :name,
                class: "form-control",
                autofocus: true,
                required: true

        .modal-footer
          = f.submit "Save Project", class: "btn btn-sm btn-success"
