<h2><i class="fa fa-shopping-cart"></i> Products<%= link_to 'New Product', new_product_path, class: "btn btn-sm btn-success", style: "float: right;" %></h2>

<hr>

<% for product in @products %>

  <div class="panel panel-default">

    <div class="panel-heading">
      <h4>
        <%= link_to product.name, product %>
        <div style="float:right"><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_product_path(product) %> <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </h4>
    </div>

    <div class="panel-body">

      <table class="table">
        <thead>
          <tr>
            <th width="30%">Project Name</th>
            <th width="20%">Assigned</th>
            <th width="10%">Start Date</th>
            <th width="10%">Due Date</th>
            <th width="10%">End Date</th>
            <th>Status</th>
          </tr>
        </thead>

        <tbody>
          <% product.projects.each do |project| %>
            <tr>
              <td><%= link_to project.name, project %></td>
              <td><%= link_to current_user.name, current_user %></td>
              <td><%= project.created_at.strftime("%x") if project.created_at %></td>
              <td><%= project.due_date.strftime("%x") if project.due_date %></td>
              <td></td>
              <td><%= project.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>

<% end %>

