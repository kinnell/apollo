<div class="panel panel-default">

  <div class="panel-heading">
    <h4>
      <i class="fa fa-shopping-cart"></i> Products
      <%= link_to "Create Product", new_product_path, class: "btn btn-sm btn-primary", style: "float: right;" %>
    </h4>
  </div>

  <div class="panel-body">

    <% for product in @products %>

      <h4>
        <%= link_to product.name, product %>
      </h4>

      <%= render partial: "products/projects_table", :locals => {:product => product} %>

      <hr>
      <br><br>

    <% end %>

  </div>

</div>