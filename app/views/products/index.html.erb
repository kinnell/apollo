<div class="panel panel-default">

  <div class="panel-heading">
    <h4><i class="fa fa-shopping-cart"></i> Products</h4>
  </div>

  <div class="panel-body">

    <% for product in @products %>

      <h4>
        <%= link_to product.name, product %>
      </h4>


      <table class="table">
        <thead>
          <tr>
            <th width="30%">Project Name</th>
            <th width="20%">Assigned</th>
            <th width="10%">Start Date</th>
            <th width="10%">Due Date</th>
            <th width="10%">End Date</th>
            <th>Status</th>
          </tr>
        </thead>

        <tbody>
          <% product.projects.each do |project| %>
            <tr>
              <td><%= link_to project.name, project %></td>
              <td><%= link_to current_user.name, current_user %></td>
              <td><%= project.created_at.strftime("%x") if project.created_at %></td>
              <td><%= project.due_date.strftime("%x") if project.due_date %></td>
              <td><%= project.end_date.strftime("%x") if project.end_date %></td>
              <td><%= project.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <hr>
      <br><br>

    <% end %>

  </div>

</div>