%tr{id: "product_#{product.id}"}
  %td= product.name
  %td.text-center= product.projects.count
  %td.text-center
    = link_to edit_product_path(product),
      remote: true,
      data: { title: "Edit Product", toggle: "tooltip", placement: "bottom" },
      class: "button btn btn-xs btn-warning btn-margin" do
      %i.fa.fa-pencil

    = link_to product_path(product),
      method: :delete,
      data: { title: "Delete Product", toggle: "tooltip", placement: "bottom", confirm: "Are you sure you want to delete this product?" },
      disabled: !product.deletable?,
      class: "button btn btn-xs btn-danger btn-margin" do
      %i.fa.fa-trash

