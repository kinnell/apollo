  .panel.panel-default

    .panel-heading
      %h4
        %i.fa.fa-shopping-cart
        Products
        %button.btn.btn-success.btn-sm.btn-margin.pull-right{data: { toggle: "modal", target: "#new-product-modal" } }
          %i.fa.fa-plus-circle.btn-margin
