<div class="panel panel-default">

	<div class="panel-heading">
		<h3><%= @user.name %></h3>
	</div>

	<div class="panel-body">
		<div class="user-info">
			<p>
				<%= image_tag @user.profile_photo.url(:thumb), class: "profile-photo" %><br>
				<i class="fa fa-envelope"></i> <%= @user.email %>
				<i class="fa fa-key"></i> Last Sign-In: <%= time_ago_in_words(@user.last_sign_in_at) %>
			</p>
		</div>
	</div>

</div>

<hr>

<div class="panel panel-default">

	<div class="panel-heading">
		<h4><i class="fa fa-folder-o"></i> Current Projects (<%= @user.projects.incomplete.uniq.count %>)</h4>
	</div>

	<div class="panel-body">
		<%= render partial: "users/projects_table", :locals => {:projects => @user.projects.incomplete.uniq} %>
	</div>

</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<h4><i class="fa fa-folder"></i> Previous Projects (<%= @user.projects.completed.uniq.count %>)</h4>
	</div>

	<div class="panel-body">
		<%= render partial: "users/projects_table", :locals => {:projects => @user.projects.completed.uniq} %>
	</div>

</div>

