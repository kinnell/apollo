.panel.panel-default.new-comment-panel
  = form_for [@project, @project.comments.new], html: { class: "form-inline" }, remote: true do |f|
    .panel-body
      .form-group
        = f.hidden_field :project_id, value: @project.id
        = f.text_area :content, placeholder: "Type your project comment here...", class: "form-control new-comment-field", required: true, rows: 3
    
    .panel-footer
      .form-group
        = f.submit "Post update", class: "btn btn-sm btn-primary pull-right"
