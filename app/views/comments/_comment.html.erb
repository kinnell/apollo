<div class="comment">
	<%= link_to comment.user.name, comment.user, class: "commenter" %>
	<%= content_tag :div, comment.content, class: "comment-content" %>
	<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "comment-tools" %>
	<%= content_tag :div, "#{time_ago_in_words(comment.created_at)} ago", class: "comment-date" %>
</div>

<hr>