<center>
	<%= form_for [@project.comments.new], :html => {:class => 'form-inline'} do |f| %>

		<div class="form-group" style="width: 100%;">
			<%= f.hidden_field :user_id, :value => current_user.id %>
			<%= f.hidden_field :project_id, :value => @project.id %>
			<%= f.text_field :content, :placeholder => "Comment", class: "form-control input-sm", style: "width: 85%; float: left;", :required => true %>
			<%= f.submit "Add Comment", class: "btn btn-sm btn-primary" %>
			<%= link_to "x".html_safe, 'javascript:;', "data-toggle" => "collapse", 'data-target' => '#addComment', style: "margin-left: 5px;" %>
		</div>

	<% end %>
</center>