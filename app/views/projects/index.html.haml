.col-md-12

  .panel.panel-default

    .panel-heading
      %h4
        %i.fa.fa-folder-o
        Projects
        %button.btn.btn-success.btn-sm.btn-margin.pull-right{data: { toggle: "modal", target: "#new-project-modal" } }
          %i.fa.fa-plus-circle.btn-margin
          Start a new project

      = render "new"

    .panel-body

      #projects-table
        = render "index", q: @q, projects: @projects

