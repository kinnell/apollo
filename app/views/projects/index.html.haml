.col-md-12

  .panel.panel-default

    .panel-heading
      %h4
        %i.fa.fa-folder
          Projects

    .panel-body

      = search_form_for @q, class: "form-inline", remote: true do |f|

        .form-group
          %label.control-label{style: "margin-right: 15px;"} Search:
          = f.text_field :name_or_product_name_cont,
            class: "form-control input-sm",
            onkeyup: "$(this).parents('form').trigger('submit.rails')"

      %br


      %table.table.table-hover.table-responsive
        %thead
          %tr
            %th
              %i.fa.fa-star{style: "color: #666"}
            %th= sort_link(@q, :product_name, "Product")
            %th Project
            %th
            %th Assigned By
            %th Assigned
            %th.text-center Start Date
            %th.text-center End Date
            %th.text-center Status
            %th.text-center Actions

        %tbody= render @projects


