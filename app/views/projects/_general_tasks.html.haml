%li#item-general.item
  %h4.item-main
    %i.fa.fa-folder-o.fa-fw.item-type-icon
    .item-name Project Tasks
    = link_to "javascript:;",
      data: { toggle: "collapse", target: "#item-0-addTask" },
      class: "btn btn-default btn-xs add-task-btn pull-right",
      style: "margin-right: 28px;" do
      %i.fa.fa-plus

  #item-0-addTask.collapse= render "tasks/new", item: nil

  - if @project.tasks.general.any?
    #item-0-tasks.tasks-list-box{style: "margin-bottom: 15px;"}
      = render "items/tasks", tasks: project.tasks.general, item_id: 0
