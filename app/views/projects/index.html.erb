<div class="panel panel-default">
	<div class="panel-heading">
		<h4><i class="fa fa-folder-o"></i> Projects <%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-primary", style: "float: right; margin-left: 10px;" %>

			<ul id="tabs" class="nav nav-pills" data-tabs="tabs" style="float: right; font-size: 12px;">
      		<li class="active"><a href="#myProjects" data-toggle="tab">Your Projects</a></li>
        		<li><a href="#allProjects" data-toggle="tab">All Projects</a></li>
    		</ul>

		</h4>
	</div>
</div>

<hr>

    <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="myProjects">

				<% for project in current_user.projects.order("starred DESC, due_date").uniq %>

					<div class="panel panel-default">
						<div class="panel-heading">
							<%= render partial: "projects/title", :locals => {:project => project} %>
						</div>
						<div class="panel-body">
							<%= render partial: "projects/info", :locals => {:project => project} %>
						</div>
					</div>

				<% end %>

        </div>
        <div class="tab-pane" id="allProjects">

			<% for project in Project.all.order("starred DESC, due_date") %>

				<div class="panel panel-default">
					<div class="panel-heading">
						<%= render partial: "projects/title", :locals => {:project => project} %>
					</div>
					<div class="panel-body">
						<%= render partial: "projects/info", :locals => {:project => project} %>
					</div>
				</div>

			<% end %>

        </div>
    </div>

