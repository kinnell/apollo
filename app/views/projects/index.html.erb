
<div class="panel panel-default">
	<div class="panel-heading">
		<h2><i class="fa fa-folder-o"></i> Projects<%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-primary", style: "float: right;" %></h2>
	</div>
</div>

<hr>

<% for project in @projects %>

	<div class="panel panel-default">
		<div class="panel-heading">

			<h4>

				<span class="fa-stack" style="font-size: 10px;">
				  <i class="fa fa-folder fa-stack-2x"></i>
					<% if project.status == "Incomplete" %>
				  <i class="fa fa-ellipsis-h fa-inverse fa-stack-1x"></i>
					<% elsif project.status == "In Progress" %>
					  <i class="fa fa-refresh fa-inverse fa-stack-1x"></i>
				<% else %>
					  <i class="fa fa-check fa-inverse fa-stack-1x"></i>

					<% end %>
				</span>

				<%= link_to "[#{project.product.name}] #{project.name}", project %>

				<%= render partial: "projects/tools", :locals => {:project => project} %>

			</h4>

		</div>

			<div class="panel-body">
				<%= render partial: "projects/info", :locals => {:project => project} %>
			</div>


	</div>

<% end %>