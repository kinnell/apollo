<ul class="tools-dropdown">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-angle-down"></i></a>
    <ul class="dropdown-menu">
      <li><%= link_to '<i class="fa fa-pencil"></i> Edit this project'.html_safe, edit_project_path(project) %></li>

      <% unless project.status == "Completed" %>
	      <li><%= link_to '<i class="fa fa-check-square-o"></i> Complete this project'.html_safe, complete_project_path(project), method: :post %></li>
	   <% else %>
	   	<li><%= link_to '<i class="fa fa-square-o"></i> Uncomplete this project'.html_safe, uncomplete_project_path(project), method: :post %></li>
	   <% end %>
      <li><%= link_to '<i class="fa fa-trash-o"></i> Delete this project'.html_safe, project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </li>
</ul>