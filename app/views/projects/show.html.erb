<div class="container">

	<h2><i class="fa fa-folder-o"></i> <%= @project.name %><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_project_path(@project), class: "btn btn-sm btn-success", style: "float: right;" %></h2>

	<h4><b>Due Date:</b> <%= @project.due_date.strftime("%x") %></h4>

	<hr>

	<ul>
		<% @tasks.each do |task| %>
		<li>
			<%= task.name %> (<%= task.due_date.strftime("%x") if task.due_date %>)
			<%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_task_path(task) %>
			<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %>
		</li>
		<% end %>
	</ul>



	<br>

	<br>

</div>