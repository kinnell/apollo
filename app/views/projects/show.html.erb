<div class="col-md-12">
	<div class="panel panel-default">

		<div class="panel-heading">
			<h4>
				<%= link_to '<i class="fa fa-star" style="color: #ffd76e;"></i>'.html_safe, toggle_starred_project_path(@project), method: :post if @project.starred %>
				<%= link_to '<i class="fa fa-star-o" style="color: #999;"></i>'.html_safe, toggle_starred_project_path(@project), method: :post unless @project.starred %>

				<%= link_to "[#{@project.product.name}] #{@project.name}", @project %>

				<ul class="tools-dropdown">
				  <li class="dropdown">
				    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-angle-down"></i></a>
				    <ul class="dropdown-menu pull-right">
				      <li><%= link_to '<i class="fa fa-pencil"></i> Edit this project'.html_safe, edit_project_path(@project) %></li>
				      <li><%= link_to '<i class="fa fa-trash-o"></i> Delete this project'.html_safe, @project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
				    </ul>
				  </li>
				</ul>

				<%= render partial: "projects/status", :locals => {:project => @project} %>

			</h4>
		</div>

		<div class="panel-body">
			<div class="project-info" style="line-height: 200%">
				<div class="row" style="margin-top: 0px;">

					<div class="col-md-4">
					</div>

					<div class="col-md-4">
					</div>

					<div class="col-md-4">
					</div>


					<div class="col-md-4">
						<i class="fa fa-calendar"></i>
						<b>Start Date:</b> <%= print_date(@project.created_at, "m") %>
					</div>

					<div class="col-md-4">
						<i class="fa fa-calendar"></i> <b>Due Date:</b> <%= @project.due_date ? print_date(@project.due_date, "m") : "n/a"  %>
					</div>

					<div class="col-md-4">
						<i class="fa fa-calendar"></i> <b>End Date:</b> <%= @project.end_date ?  print_date(@project.end_date, "m") : "n/a" %>
					</div>



					<div class="col-md-8">
						<i class="fa fa-user"></i> <b>Assigned:</b> <%= @project.users.first ? @project.users.uniq.map {|u| u.name}.join(", ") : "None" %>
					</div>

					<div class="col-md-4">
						<i class="fa fa-user"></i> <b>Assigned By:</b> <%= @project.assigned_by %>
					</div>

					<div class="col-md-12" style="line-height: 150%"><br><b>Description:</b><br><font color="#777"><%= @project.description.gsub(/\n/, '<br>').html_safe %></font><hr></div>

					<div class="col-md-12">
						<div class="progress active">
							<div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= @project.progress_percent %>%"><span><%= @project.progress_percent %>% Complete (<%= @project.tasks.completed.count %> out of <%= @project.tasks.count %> tasks)</span></div>
						</div>
					</div>

				</div>
			</div>

		</div>

	</div>
</div>

<div class="col-md-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4>
				<i class="fa fa-comment"></i> Updates (<%= @project.comments.count %>)
				<%= link_to "<i class='fa fa-plus'></i>".html_safe, 'javascript:;', "data-toggle" => "collapse", 'data-target' => '#addComment', class: "btn btn-xs btn-primary", style: "float: right;" %>
			</h4>
		</div>
		<div class="panel-body">
			<%= render @project.comments %>
			<div id="addComment" class="collapse"><%= render partial: "comments/new" %></div>
		</div>
	</div>
</div>


<div class="col-md-12">

	<div class="panel panel-default">

		<div class="panel-heading">
			<h4><i class="fa fa-check-circle"></i> Tasks (<%= @project.tasks.incomplete.count %>)
				<%= link_to "<i class='fa fa-plus'></i>".html_safe, 'javascript:;', "data-toggle" => "collapse", 'data-target' => '#addTask', class: "btn btn-xs btn-primary", style: "float: right;" %>
			</h4>
		</div>

		<div class="panel-body">

			<div class="tasks-list">

				<div id="addTask" class="collapse"><%= render partial: "tasks/new" %><br><hr></div>
				<%= content_tag :div, "Remaining Tasks", class: "title-sm", style: "color: #333; margin-bottom: 4px;" %>

				<ul>
					<%= render @project.tasks.incomplete.due.order("starred DESC, due_date") %>
					<%= render @project.tasks.incomplete.notDue.order("starred DESC, created_at") %>
				</ul>

			</div>

			<hr>

			<div class="tasks-list">
				<%= content_tag :div, "Completed Tasks", class: "title-sm" %>
				<ul><%= render @project.tasks.completed.order("completed_at") %></ul>
			</div>

		</div>

	</div>

</div>

<div class="col-md-12">

	<div class="panel panel-default">
		<div class="panel-heading">
			<h4>
				<i class="fa fa-picture-o"></i> Items (<%= @project.items.count %>)
				<%= link_to "<i class='fa fa-plus'></i>".html_safe, 'javascript:;', "data-toggle" => "collapse", 'data-target' => '#addItem', class: "btn btn-xs btn-primary", style: "float: right;" %>
			</h4>
		</div>

		<div class="panel-body">
			<div class="items-list">
				<ul><%= render @project.items %></ul><hr>
				<div id="addItem" class="collapse"><%= render partial: "items/new" %></div>


			</div>

		</div>

	</div>

</div>

