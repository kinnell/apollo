<div class="container" style="margin-top: 50px;">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">


			<div class="logo">apollo</div>

	<center>
 		<% unless user_signed_in? %>
 		   <%= link_to new_user_registration_path, class: "btn btn-primary btn-md" do %>
         	<i class='fa fa-magic'></i> Register
         <% end %>
         <%= link_to new_user_session_path, class: "btn btn-success btn-md" do %>
         	<i class='fa fa-key'></i> Log In
         <% end %>
 		<% else %>
 	      <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-warning btn-md" do %>
 	      	<i class='fa fa-sign-out'></i> Log Out
 	      <% end %>
 	   <% end %>
 	</center>

		</div>
	</div>
</div>
