
<div class="panel panel-default">
	<div class="panel-heading"><h4><i class="fa fa-calendar"></i> Calendar</h4></div>

	<div class="panel-body">
		<%= calendar do |date| %>
			<%= date.day %>
			<% if @tasks_by_date[date] %>
				<ul>
					<% @tasks_by_date[date].each do |task| %>
						<li><%= link_to task.name, task.project %></li>
					<% end %>
				</ul>
			<% end %>
		<% end %>
	</div>
</div>